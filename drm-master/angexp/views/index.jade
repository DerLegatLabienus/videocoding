extends layout

block body
  div.navbar.navbar-default.navbar-fixed-top(role='navigation')
      div.container
        div.navbar-header
          a(href="/").navbar-brand Video streaming server
        div.navbar-collapse.collapse
          ul.nav.navbar-nav(ng-controller="NavBarCtrl")
            li(ng-class="{active: isActive('/videos')}")
              a(href="/videos") videos
            li(ng-class="{active: isActive('/about')}")
              a(href="/about") about

    div.container
      div(ng-view)

  script(src='js/lib/angular/angular.js')
  script(src='js/lib/jquery/jquery-2.0.3.min.js')
  script(src='js/app.js')
  script(src='js/services.js')
  script(src='js/controllers.js')
  script(src='js/filters.js')
  script(src='js/directives.js')
  script(src='css/dist/js/bootstrap.min.js')
